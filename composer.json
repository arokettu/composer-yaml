{
    "name": "sandfoxme/composer-yaml",
    "type": "composer-plugin",
    "license": "MIT",
    "description": "Yaml support plugin for composer",
    "keywords": [
        "composer",
        "composer plugin",
        "yaml"
    ],
    "authors": [
        {
            "name": "Anton Smirnov",
            "email": "sandfox@sandfox.me"
        }
    ],
    "autoload": {
        "psr-4": {
            "SandFox\\ComposerYaml\\": "src"
        }
    },
    "extra": {
        "class": "SandFox\\ComposerYaml\\YamlPlugin"
    },
    "require": {
        "symfony/yaml":         "^2|^3|^4",

        "composer-plugin-api":  "^1.1",
        "php":                  ">= 5.5"
    },
    "require-dev": {
        "composer/composer": "~1.8"
    },
    "suggest": {
        "ext-yaml": "For standards compliant YAML parsing"
    }
}
